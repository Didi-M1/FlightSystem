<UserControl x:Class="PLGUI.UserControls.HolidayUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLGUI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Margin="10,135,0,0" HorizontalAlignment="Left" Width="780">
            <Grid.Background>
                <ImageBrush ImageSource="..\images\HolidayImage.jpg"/>
            </Grid.Background>
        </Grid>
        <Label HorizontalContentAlignment="Center" TextElement.Foreground="Blue" VerticalContentAlignment="Center" TextElement.FontStretch="Expanded"  Name="HoliLabel" TextElement.FontSize="40" TextOptions.TextFormattingMode="Display"  Content="Holiday Alert" HorizontalAlignment="Left" Height="65" TextBlock.TextAlignment="Center" VerticalAlignment="Top" Width="790"/>
        <TextBlock Name="HoliBox" HorizontalAlignment="Left" Height="65" Margin="10,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="790"/>
    </Grid>
</UserControl>